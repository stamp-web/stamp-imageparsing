pipeline {
    agent any
	tools {
		maven "MAVEN"
		jdk "JAVA"
	}
    
	stages {
        stage('Build Microservice') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
		stage('UI Setup') {
		    steps {
			   sh 'cd web-app && npm install'
			}
		}
		stage('UI Test') {
		    steps {
			   sh 'cd web-app/test/unit && au test --coverage'
			}
			post {
                success {
                    junit 'web-app/test/junit/*.xml' 
                }
            }
		}
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}